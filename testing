public function fetchProductData() {
    $db = \Config\Database::connect();

    $sql = "SELECT product_name, product_name_slug FROM product WHERE product_name IN (
        'Speak with Confidence',
        'STEP Coach',
        'STEP for Competitive Exams',
        'STEP for Working Professionals - Online'
    )";

    $query = $db->query($sql);

    $productData = $query->getResultArray();

    return $productData;
}
